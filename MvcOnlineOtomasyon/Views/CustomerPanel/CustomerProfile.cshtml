@model MvcOnlineOtomasyon.Models.Concrete.Customer

@using(Html.BeginForm("CustomerProfile","CustomerPanel",FormMethod.Post))
{
<form class="form-horizontal">

    <div class="form-group row">

        <

        <div class="col-sm-10">

            @Html.HiddenFor(x => x.CustomerId, new {@class="form-control"})

        </div>

    </div> 
    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">Adı</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CustomerName, new {@class="form-control"})

        </div>

    </div>

    <div class="form-group row">

        <label for="inputEmail" class="col-sm-2 col-form-label">Soyadı</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CustomerLastname, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">Şehir</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CustomerCity, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputExperience" class="col-sm-2 col-form-label">E-Mail</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CustomerMail, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CustomerPassword, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <div class="checkbox">

                <label>

                    <input type="checkbox"> Koşulları Okudum Kabul Ediyorum.

                </label>

            </div>

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Güncelle</button>

        </div>

    </div>

</form>
}