@using MvcOnlineOtomasyon.Models.Concrete
@model List<Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <div class="form-group">
        <table class="table table-bordered" style="margin-top:10px;">
            <tr>
                <th>Id</th>
                <th>Adı</th>
                <th>Soyadı</th>
                <th>Şehir</th>
                <th>E-mail</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Detay</th>
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.CustomerId</td>
                    <td>@x.CustomerName</td>
                    <td>@x.CustomerLastname</td>
                    <td>@x.CustomerCity</td>
                    <td>@x.CustomerMail</td>
                    <td><a class="btn btn-outline-primary" href="/Customer/Delete/@x.CustomerId" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="fas fa-trash"></i> Sil</a></td>
                    <td><a class="btn btn-outline-warning" href="/Customer/Update/@x.CustomerId"><i class="fas fa-pen-square"></i> Güncelle</a></td>
                    <td><a class="btn btn-outline-danger" href="/Customer/Detail/@x.CustomerId"><i class="fas fa-info-circle"></i> Satış Geçmişi</a></td>


                </tr>

            }
        </table>
    </div>
    <div class="form-group">
        <a class="btn btn-success float-right" href="/Customer/Add"><i class="fas fa-plus-circle"></i> Yeni Müşteri Ekle</a>
    </div>
</div>


