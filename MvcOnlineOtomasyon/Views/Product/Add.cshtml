@model MvcOnlineOtomasyon.Models.Concrete.Product
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <h2>Yeni Ürün Ekleme Sayfası</h2>
    <form class="form-group" method="post">
        <div class="form-group">
            <label><b>Logo</b></label>
            @Html.TextBoxFor(x => x.ProductPhoto, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label><b>Adı</b></label>
            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label><b>Marka</b></label>
            @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label><b>Category</b></label>
            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label><b>Stok</b></label>
            @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label><b>Alış Fiyat</b></label>
            @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label><b>Satış Fiyat</b></label>
            @Html.TextBoxFor(x => x.SalesPrice, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button class="btn btn-outline-success float-right">Kaydet</button>
            <a href="/Product/Index" class="btn btn-outline-danger">Vazgeç</a>
        </div>
    </form>
</div>

