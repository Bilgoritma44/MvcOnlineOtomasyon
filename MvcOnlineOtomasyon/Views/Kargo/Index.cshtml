@using MvcOnlineOtomasyon.Models.Concrete
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br/>
<div class="container">
    @using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
    {
        <p>
            Kargo Takip Kodu: @Html.TextBox("p")
            <input type="submit" value="Ara" />
        </p>
    }

    <div class="form-group">
        <table class="table table-bordered" style="margin-top:10px;">
            <tr>
                <th>Personel</th>
                <th>Alıcı</th>
                <th>Takip Kodu</th>
                <th>Tarih</th>
                <th>Detay</th>
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Personel</td>
                    <td>@x.Alici</td>
                    <td>@x.TakipKodu</td>
                    <td>@x.Tarih</td>
                    <td><a class="btn btn-default" style="background-color:slateblue;color:white" href="/Kargo/KargoTakip/@x.KargoDetayId"><i class="fas fa-info-circle"></i> Detay</a></td>


                </tr>

            }
        </table>
    </div>
    <div class="form-group">
        <a class="btn btn-success float-right" href="/Kargo/Add"><i class="fas fa-plus-circle"></i> Yeni Kargo Ekle</a>
    </div>
</div>



