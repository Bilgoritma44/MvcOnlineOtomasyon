@using MvcOnlineOtomasyon.Models.Concrete
@model List<SalesMove>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <div class="form-group">
        <table id="tbl1" class="table table-bordered" style="margin-top:10px;">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ürün Adı</th>
                    <th>Müşteri</th>
                    <th>Personel</th>
                    <th>Fiyat</th>
                    <th>Adet</th>
                    <th>Toplam</th>
                    <th>Tarih</th>
                    <th>Güncelle</th>
                    <th>Detay</th>
                </tr>
            </thead>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.SalesMoveId</td>
                    <td>@x.Product.ProductName</td>
                    <td>@x.Customer.CustomerName @x.Customer.CustomerLastname</td>
                    <td>@x.Personel.PersonelName @x.Personel.PersonelLastName</td>
                    <td>@x.Price</td>
                    <td>@x.Quantity</td>
                    <td>@x.SumPrice</td>
                    <td>@(((DateTime)x.Date).ToString("dd-MMM-yyyy"))</td>
                    <td><a class="btn btn-outline-warning" href="/SalesMove/Update/@x.SalesMoveId"><i class="fas fa-pen-square"></i> Güncelle</a></td>
                    <td><a class="btn btn-outline-danger" href="/SalesMove/Detail/@x.SalesMoveId"><i class="fas fa-info-circle"></i> Detay</a></td>


                </tr>

            }
        </table>
    </div>
    @*<div class="form-group">
        <a class="btn btn-success float-right" href="/SalesMove/Add"><i class="fas fa-plus-circle"></i> Yeni Satış Ekle</a>
    </div>*@
</div>


