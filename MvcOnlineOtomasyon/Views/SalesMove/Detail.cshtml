@using MvcOnlineOtomasyon.Models.Concrete
@model List<SalesMove>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <div class="form-group">
        <table class="table table-bordered" style="margin-top:10px;">
            <tr>
                <th>#</th>
                <th>Ürün Adı</th>
                <th>Müşteri</th>
                <th>Personel</th>
                <th>Fiyat</th>
                <th>Adet</th>
                <th>Toplam</th>
                <th>Tarih</th>
               
            </tr>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.SalesMoveId</td>
                    <td>@x.Product.ProductName</td>
                    <td>@x.Customer.CustomerName @x.Customer.CustomerLastname</td>
                    <td>@x.Personel.PersonelName @x.Personel.PersonelLastName</td>
                    <td>@x.Price</td>
                    <td>@x.Quantity</td>
                    <td>@x.SumPrice</td>
                    <td>@(((DateTime)x.Date).ToString("dd-MMM-yyyy"))</td>
                </tr>

            }
        </table>
    </div>
    <div class="form-group">
        <button class="btn btn-outline-primary float-right"><i class="fas fa-print"></i> Yazdır</button>
        <a href="/SalesMove/Index" class="btn btn-outline-danger">Geri Dön</a>
    </div>
</div>


