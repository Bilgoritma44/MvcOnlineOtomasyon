@model MvcOnlineOtomasyon.Models.Concrete.Department
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <h2>Departman Güncelleme Sayfası</h2>
    @using (Html.BeginForm("Update", "Department", FormMethod.Post))
    {

        <div class="form-group">
            @Html.HiddenFor(x => x.DepartmentId)
        </div>
        <div class="form-group">
            <label><b>Departman Adı</b></label>
            @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
        </div>
        @*<div class="form-group">
            <label><b>Departman Durum</b></label>
            @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
        </div>*@
        <div class="form-group">
            <button class="btn btn-outline-warning float-right">Güncelle</button>
            <a href="/Department/Index" class="btn btn-outline-danger">Vazgeç</a>
        </div>
    }
</div>


