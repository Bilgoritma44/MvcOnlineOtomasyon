@model IEnumerable<MvcOnlineOtomasyon.Models.Concrete.GroupClass3>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Marka Adet Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress</th>
                    <th style="width: 40px">Adet</th>
                </tr>
            </thead>
            <tbody>
                @{ int sayac = 0;}
                @foreach (var x in Model)
                {
                <tr>
                    <td>@{sayac++;} @sayac</td>
                    <td>@x.Marka</td>
                    <td>
                        @if (x.Sayi == 1)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-warning" style="width: 55%"></div>
                            </div>
                        } @if (x.Sayi == 2)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-success" style="width: 55%"></div>
                            </div>
                        } @if (x.Sayi == 3)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-danger" style="width: 55%"></div>
                            </div>
                        }
                    </td>
                    <td>
                        @if (x.Sayi == 1)
                        {
                            <span class="badge bg-success">@x.Sayi</span>
                        }@if (x.Sayi == 2)
                        {
                            <span class="badge bg-info">@x.Sayi</span>
                        }@if (x.Sayi == 3)
                        {
                            <span class="badge bg-warning">@x.Sayi</span>
                        }
                    </td>
                    
                </tr>
                }
                
                
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
