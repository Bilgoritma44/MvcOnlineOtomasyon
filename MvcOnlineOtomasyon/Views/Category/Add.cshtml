@model MvcOnlineOtomasyon.Models.Concrete.Category
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <h2>Yeni Kategori Ekleme Sayfası</h2>
    <form class="form-group" method="post">
        <div class="form-group">
            <label><b>Kategori Adı</b></label>
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button class="btn btn-outline-success float-right">Kaydet</button>
            <a href="/Category/Index" class="btn btn-outline-danger">Vazgeç</a>
        </div>
    </form>



</div>

