@model MvcOnlineOtomasyon.Models.Concrete.Category
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <h2>Kategori Güncelleme Sayfası</h2>
    @using (Html.BeginForm("Update", "Category", FormMethod.Post))
    {

        <div class="form-group">
            @Html.HiddenFor(x => x.CategoryId)
        </div>
        <div class="form-group">
            <label><b>Kategori Adı</b></label>
            @Html.TextBoxFor(x => x.CategoryName,new { @class="form-control"})
        </div>
        <div class="form-group">
            <button class="btn btn-outline-warning float-right">Güncelle</button>
            <a href="/Category/Index" class="btn btn-outline-danger">Vazgeç</a>
        </div>
    }
</div>


